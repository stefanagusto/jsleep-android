<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FFE2"
    tools:context=".CreateRoomActivity">

  <TextView
      android:id="@+id/createRoom"
      android:layout_width="182dp"
      android:layout_height="36dp"
      android:layout_marginStart="42dp"
      android:layout_marginEnd="273dp"
      android:text="Create Room"
      android:textSize="18sp"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.106" />

  <EditText
      android:id="@+id/nameCreate"
      android:layout_width="339dp"
      android:layout_height="48dp"
      android:layout_marginStart="41dp"
      android:layout_marginEnd="31dp"
      android:autofillHints=""
      android:ems="10"
      android:hint="Name"
      android:inputType="textPersonName"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.215" />

  <EditText
      android:id="@+id/priceCreate"
      android:layout_width="339dp"
      android:layout_height="48dp"
      android:layout_marginStart="41dp"
      android:layout_marginEnd="31dp"
      android:ems="10"
      android:hint="Price"
      android:inputType="textPersonName"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.303" />

  <EditText
      android:id="@+id/addressCreate"
      android:layout_width="339dp"
      android:layout_height="48dp"
      android:layout_marginStart="41dp"
      android:layout_marginEnd="31dp"
      android:ems="10"
      android:hint="Address"
      android:inputType="textPersonName"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.474" />

  <EditText
      android:id="@+id/sizeCreate"
      android:layout_width="339dp"
      android:layout_height="48dp"
      android:layout_marginStart="41dp"
      android:layout_marginEnd="31dp"
      android:ems="10"
      android:hint="Size"
      android:inputType="textPersonName"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.386" />

  <CheckBox
      android:id="@+id/restaurantCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_light"
      android:text="Restaurant"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.676"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.66" />

  <CheckBox
      android:id="@+id/fitnessCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:fontFamily="@font/poppins_light"
      android:text="Fitness Center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.66"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.717" />

  <CheckBox
      android:id="@+id/refriCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_light"
      android:text="Refrigerator"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.306"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.597" />

  <CheckBox
      android:id="@+id/wifiCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_light"
      android:text="Wifi"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.577"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.597" />

  <CheckBox
      android:id="@+id/bathCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Bathub"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.107"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.661" />

  <CheckBox
      android:id="@+id/acCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="AC"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.108"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.598" />

  <CheckBox
      android:id="@+id/balconyCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/poppins_light"
      android:text="Balcony"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.362"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.66" />

  <TextView
      android:id="@+id/facilityText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="42dp"
      android:layout_marginEnd="325dp"
      android:text="Facility"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.547" />

  <CheckBox
      android:id="@+id/poolCheckBox"
      android:layout_width="147dp"
      android:layout_height="45dp"
      android:fontFamily="@font/poppins_light"
      android:text="Swimming Pool"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.143"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.715" />

  <TextView
      android:id="@+id/cityText"
      android:layout_width="wrap_content"
      android:layout_height="24dp"
      android:text="City"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.098"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.79" />

  <TextView
      android:id="@+id/bedTypeText"
      android:layout_width="wrap_content"
      android:layout_height="24dp"
      android:text="Bed Type"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.11"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.847" />

  <Spinner
      android:id="@+id/planets_spinner"
      android:layout_width="221dp"
      android:layout_height="24dp"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.908"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.79" />

  <Spinner
      android:id="@+id/planets_spinner2"
      android:layout_width="221dp"
      android:layout_height="24dp"
      android:fontFamily="@font/poppins_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.91"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.847" />

  <Button
      android:id="@+id/createButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Create"
      android:fontFamily="@font/poppins_light"
      android:background="@drawable/round_btn"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.118"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.945" />

  <Button
      android:id="@+id/cancelButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Cancel"
      android:fontFamily="@font/poppins_light"
      android:background="@drawable/round_btn"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.789"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.945" />

</androidx.constraintlayout.widget.ConstraintLayout>